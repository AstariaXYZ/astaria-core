{
  "name": "@astaria/sdk",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --target node",
    "test": "tsdx test",
    "test:watch": "tsdx test --watchAll",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build && husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "typechain:compile": "typechain --target ethers-v5 --out-dir './src/contracts' './abi/*.json'",
    "postinstall": "npm run typechain:compile"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": false
  },
  "module": "dist/sdk.esm.js",
  "size-limit": [
    {
      "path": "dist/sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@typechain/ethers-v5": "^10.1.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "ganache": "^7.4.4",
    "husky": "^8.0.1",
    "size-limit": "^7.0.8",
    "ts-jest": "^28.0.7",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "eth-sig-util": "^3.0.1",
    "ethers": "^5.6.9",
    "json-stringify-deterministic": "^1.0.7",
    "merkletreejs": "^0.2.32",
    "tiny-invariant": "^1.2.0",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsdx lint",
      "eslint --cache --fix",
      "prettier --write ."
    ]
  }
}
